$("ul.errors").html("")
<% if @home.errors.any? %>
  <% @home.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".home-index").html("<%= escape_javascript(render 'index') %>")
  $("#home-modal").modal("hide")
<% end %>