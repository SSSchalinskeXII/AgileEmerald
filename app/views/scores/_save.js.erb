$("ul.errors").html("")
<% if @score.errors.any? %>
  <% @score.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".score-index").html("<%= escape_javascript(render 'index') %>")
  $("#score-modal").modal("hide")
<% end %>